<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/infoLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/stateIv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/welcome_bg"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/timeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 jun 2021"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/itemsCountTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 items"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_restaurant"
                            />
                        <TextView
                            android:id="@+id/preiceOrderTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000000 Vnd"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:textColor="@color/mainOrange"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/restaurantNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Restaurant name"
                        android:layout_marginVertical="6dp"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/stateOrderTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery success"
                        android:drawableStart="@drawable/ic_minus_circle"
                        android:textColor="#4EE476"
                        android:drawableTint="@color/gray03"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/doneTabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:padding="4dp"
                android:layout_below="@id/infoLl"
                android:layout_alignParentBottom="true"
                android:gravity="end"
                >
                <Button
                    android:id="@+id/rateBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:background="@drawable/shape_round_main"
                    android:paddingHorizontal="25dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/button_bg_color"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    />
                <Button
                    android:id="@+id/reorderBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Re-order"
                    android:background="@drawable/shape_round_main"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/mainOrange"
                    android:paddingHorizontal="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:maxLines="1"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/excutingTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:padding="4dp"
                android:layout_below="@id/infoLl"
                android:layout_alignParentBottom="true"
                android:gravity="end"
                >
                <Button
                    android:id="@+id/cancelOrConfirmBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:background="@drawable/shape_round_main"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/mainOrange"
                    android:paddingHorizontal="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:maxLines="1"
                    />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>