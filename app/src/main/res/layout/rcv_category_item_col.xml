<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dp"
    android:layout_height="100dp"
    app:backgroundTint="@color/mainOrange"
    android:background="@drawable/shape_round_main"
    android:layout_marginLeft="5dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="25dp"
        >
        <ImageView
            android:id="@+id/categoryIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/welcome_bg"
            android:background="@drawable/shape_round_button01"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/categoryTv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Type asda"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:minLines="2"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        />

</RelativeLayout>