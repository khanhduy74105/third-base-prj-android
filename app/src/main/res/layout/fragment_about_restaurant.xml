<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_res"
    >


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/foodoption"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/shape_edittext01"
        android:drawableTop="@drawable/baseline_fastfood_24"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:text="Food"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/orderoption"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/thongke"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="224dp"
        android:background="@drawable/shape_edittext01"
        android:drawableTop="@drawable/baseline_fastfood_24"
        android:drawablePadding="10dp"
        android:textAlignment="center"

        android:padding="10dp"
        android:text="thongke"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderoption" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/moneyoption"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"

        android:background="@drawable/shape_edittext01"
        android:drawableTop="@drawable/baseline_fastfood_24"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="money"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/thongke"
        app:layout_constraintTop_toBottomOf="@+id/foodoption" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/orderoption"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/shape_edittext01"
        android:drawableTop="@drawable/baseline_fastfood_24"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textAlignment="center"

        android:text=" Order"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>