<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    >
    <RelativeLayout
        android:id="@+id/imgRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >
            <ImageView
                android:id="@+id/foodIv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/welcome_bg"
                android:scaleType="fitXY"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/priceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000vnd"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@drawable/shape_round_main"
            android:backgroundTint="@color/mainOrange"
            android:textColor="@color/black"
            android:padding="10dp"

            />
        <ImageButton
            android:layout_margin="10dp"
            android:id="@+id/favBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_favorite"
            android:background="@drawable/circle_orange"
            android:layout_alignParentEnd="true"
            app:tint="@color/white" />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/imgRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nameeeee"
            android:layout_marginVertical="10dp"
            android:textSize="22dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/desTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nameeeee"
            android:maxLines="1"
            />
    </LinearLayout>
</RelativeLayout>