<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodDetailActivity"
    android:padding="14dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/foodImgCl"
            >
            <ImageView
                android:id="@+id/foodIv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="3:2"
                android:scaleType="fitXY"
                android:src="@drawable/welcome_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:circularflow_radiusInDP="10dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"

            android:layout_weight="1"
            android:background="@drawable/shape_edittext01"
            android:src="@drawable/ic_back_main"
            android:padding="8dp"
            />
        <ImageButton
            android:layout_margin="10dp"
            android:id="@+id/favBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_favorite"
            android:background="@drawable/circle_orange"
            android:layout_alignParentEnd="true"
            app:tint="@color/white" />
        <TextView
            android:id="@+id/foodNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mon an ngon"
            android:layout_below="@+id/foodImgCl"
            android:textSize="28dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            />
        <LinearLayout
            android:id="@+id/rateLl"
            android:layout_below="@id/foodNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                app:tint="@color/mainOrange"
                />
            <TextView
                android:id="@+id/starRateIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="5dp"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/countRateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(40+)"
                android:textStyle="bold"
                android:textColor="@color/gray03"
                android:layout_marginHorizontal="5dp"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/seeReviewIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See review"
                android:textStyle="bold"
                android:textColor="@color/mainOrange"
                android:layout_marginHorizontal="5dp"
                android:textSize="18sp"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/priceRl"
            android:layout_below="@+id/rateLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30.000 Vnd"
                android:textSize="26dp"
                android:textColor="@color/mainOrange"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                >
                <ImageButton
                    android:id="@+id/minusFoodBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_remove"
                    android:background="@drawable/shape_round_stroke_main"
                    android:layout_alignParentEnd="true"
                    app:tint="@color/mainOrange"
                    />
                <TextView
                    android:id="@+id/amountFoodTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="22dp"
                    />
                <ImageButton
                    android:id="@+id/plusFoodBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_add"
                    android:background="@drawable/circle_orange"
                    android:layout_alignParentEnd="true"
                    app:tint="@color/white"
                    />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/descriptionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/priceRl"
            android:maxLines="4"
            android:lineSpacingExtra="5sp"
            android:text="Cho mình hỏi là có website nào free dùng để deploy node js server + db sql không ạ, Mình có Be nhỏ muốn deploy để chạy Fe bỏ vào cv, trước mình dùng 000webhost nhưng chỉ deploy được php"
            />
    </RelativeLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_main"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Add to cart"
        android:drawableStart="@drawable/ic_shopping_basket"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:drawableTint="@color/white"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

</RelativeLayout>